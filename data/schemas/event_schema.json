{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Event Schema",
  "description": "Schema for validating event data in the story mode",
  "type": "object",
  "required": ["id", "type", "title", "description"],
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1
    },
    "type": {
      "type": "string",
      "enum": ["story", "random", "seasonal", "climactic"]
    },
    "title": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string",
      "minLength": 1
    },
    "requirements": {
      "type": "object",
      "properties": {
        "min_level": {
          "type": "integer",
          "minimum": 1
        },
        "max_level": {
          "type": "integer",
          "minimum": 1
        },
        "required_chapters": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "required_events": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "required_affinities": {
          "type": "object",
          "additionalProperties": {
            "type": "integer"
          }
        },
        "required_attributes": {
          "type": "object",
          "properties": {
            "power_stat": {
              "type": "integer",
              "minimum": 1
            },
            "intellect": {
              "type": "integer",
              "minimum": 1
            },
            "charisma": {
              "type": "integer",
              "minimum": 1
            },
            "dexterity": {
              "type": "integer",
              "minimum": 1
            }
          }
        },
        "required_club": {
          "type": "integer",
          "minimum": 1,
          "maximum": 5
        },
        "required_specialization": {
          "type": "string",
          "minLength": 1
        },
        "season": {
          "type": "string",
          "enum": ["spring", "summer", "fall", "winter"]
        },
        "date_range": {
          "type": "object",
          "properties": {
            "start": {
              "type": "string",
              "format": "date"
            },
            "end": {
              "type": "string",
              "format": "date"
            }
          }
        }
      }
    },
    "dialogues": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["npc", "text"],
        "properties": {
          "npc": {
            "type": "string",
            "minLength": 1
          },
          "text": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    },
    "choices": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["text"],
        "properties": {
          "text": {
            "type": "string",
            "minLength": 1
          },
          "next_dialogue": {
            "type": "integer",
            "minimum": 0
          },
          "affinity_change": {
            "type": "object",
            "additionalProperties": {
              "type": "integer"
            }
          },
          "attribute_check": {
            "type": "string",
            "enum": ["power_stat", "intellect", "charisma", "dexterity"]
          },
          "threshold": {
            "type": "integer",
            "minimum": 1
          }
        }
      }
    },
    "additional_dialogues": {
      "type": "object",
      "additionalProperties": {
        "type": "array",
        "items": {
          "type": "object",
          "required": ["npc", "text"],
          "properties": {
            "npc": {
              "type": "string",
              "minLength": 1
            },
            "text": {
              "type": "string",
              "minLength": 1
            }
          }
        }
      }
    },
    "outcomes": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "exp": {
            "type": "integer",
            "minimum": 0
          },
          "tusd": {
            "type": "integer",
            "minimum": 0
          },
          "items": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "affinity_changes": {
            "type": "object",
            "additionalProperties": {
              "type": "integer"
            }
          },
          "attribute_changes": {
            "type": "object",
            "properties": {
              "power_stat": {
                "type": "integer"
              },
              "intellect": {
                "type": "integer"
              },
              "charisma": {
                "type": "integer"
              },
              "dexterity": {
                "type": "integer"
              }
            }
          },
          "unlock_chapters": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "unlock_events": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "chance": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "Probability of this event occurring when conditions are met (for random events)"
    },
    "cooldown": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of days before this event can occur again (for random and seasonal events)"
    },
    "duration": {
      "type": "integer",
      "minimum": 1,
      "description": "Number of days this event is available (for seasonal events)"
    },
    "location": {
      "type": "string",
      "minLength": 1,
      "description": "Location where this event takes place"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Tags for categorizing and filtering events"
    }
  },
  "allOf": [
    {
      "if": {
        "properties": { "type": { "enum": ["random"] } }
      },
      "then": {
        "required": ["dialogues", "outcomes", "chance"]
      }
    },
    {
      "if": {
        "properties": { "type": { "enum": ["seasonal"] } }
      },
      "then": {
        "required": ["dialogues", "outcomes", "duration"],
        "properties": {
          "requirements": {
            "required": ["season"]
          }
        }
      }
    },
    {
      "if": {
        "properties": { "type": { "enum": ["climactic"] } }
      },
      "then": {
        "required": ["dialogues", "choices", "outcomes"],
        "properties": {
          "requirements": {
            "required": ["required_chapters"]
          }
        }
      }
    }
  ]
}