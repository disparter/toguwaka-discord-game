{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Chapter Schema",
  "description": "Schema for validating chapter data in the story mode",
  "type": "object",
  "required": ["type", "title", "description"],
  "properties": {
    "type": {
      "type": "string",
      "enum": [
        "story",
        "branching",
        "challenge",
        "romance_route",
        "club_route",
        "symbolic"
      ]
    },
    "title": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string",
      "minLength": 1
    },
    "dialogues": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["npc", "text"],
        "properties": {
          "npc": {
            "type": "string",
            "minLength": 1
          },
          "text": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    },
    "choices": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["text"],
        "properties": {
          "text": {
            "type": "string",
            "minLength": 1
          },
          "next_dialogue": {
            "type": "integer",
            "minimum": 0
          },
          "affinity_change": {
            "type": "object",
            "additionalProperties": {
              "type": "integer"
            }
          },
          "attribute_check": {
            "type": "string",
            "enum": ["power_stat", "intellect", "charisma", "dexterity"]
          },
          "threshold": {
            "type": "integer",
            "minimum": 1
          },
          "specialization_choice": {
            "type": "integer",
            "minimum": 0
          }
        }
      }
    },
    "additional_dialogues": {
      "type": "object",
      "additionalProperties": {
        "type": "array",
        "items": {
          "type": "object",
          "required": ["npc", "text"],
          "properties": {
            "npc": {
              "type": "string",
              "minLength": 1
            },
            "text": {
              "type": "string",
              "minLength": 1
            }
          }
        }
      }
    },
    "shared_dialogue": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["npc", "text"],
        "properties": {
          "npc": {
            "type": "string",
            "minLength": 1
          },
          "text": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    },
    "choices_2": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["text"],
        "properties": {
          "text": {
            "type": "string",
            "minLength": 1
          },
          "next_dialogue": {
            "type": "integer",
            "minimum": 0
          },
          "affinity_change": {
            "type": "object",
            "additionalProperties": {
              "type": "integer"
            }
          },
          "attribute_check": {
            "type": "string",
            "enum": ["power_stat", "intellect", "charisma", "dexterity"]
          },
          "threshold": {
            "type": "integer",
            "minimum": 1
          }
        }
      }
    },
    "additional_dialogues_2": {
      "type": "object",
      "additionalProperties": {
        "type": "array",
        "items": {
          "type": "object",
          "required": ["npc", "text"],
          "properties": {
            "npc": {
              "type": "string",
              "minLength": 1
            },
            "text": {
              "type": "string",
              "minLength": 1
            }
          }
        }
      }
    },
    "branches": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": ["conditions", "next_chapter"],
        "properties": {
          "conditions": {
            "type": "object",
            "properties": {
              "choice": {
                "type": "integer",
                "minimum": 0
              },
              "check_result": {
                "type": "string",
                "enum": ["success", "failure"]
              }
            }
          },
          "next_chapter": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    },
    "challenge_type": {
      "type": "string",
      "enum": ["combate", "enigma", "social", "atletismo", "conhecimento"]
    },
    "difficulty": {
      "type": "string",
      "enum": ["fácil", "médio", "difícil", "muito difícil"]
    },
    "challenge_description": {
      "type": "string",
      "minLength": 1
    },
    "success_dialogues": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["npc", "text"],
        "properties": {
          "npc": {
            "type": "string",
            "minLength": 1
          },
          "text": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    },
    "failure_dialogues": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["npc", "text"],
        "properties": {
          "npc": {
            "type": "string",
            "minLength": 1
          },
          "text": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    },
    "rewards": {
      "type": "object",
      "properties": {
        "success": {
          "type": "object",
          "properties": {
            "exp": {
              "type": "integer",
              "minimum": 0
            },
            "tusd": {
              "type": "integer",
              "minimum": 0
            },
            "items": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "affinity_changes": {
              "type": "object",
              "additionalProperties": {
                "type": "integer"
              }
            }
          }
        },
        "failure": {
          "type": "object",
          "properties": {
            "exp": {
              "type": "integer",
              "minimum": 0
            },
            "tusd": {
              "type": "integer",
              "minimum": 0
            }
          }
        }
      }
    },
    "completion_exp": {
      "type": "integer",
      "minimum": 0
    },
    "completion_tusd": {
      "type": "integer",
      "minimum": 0
    },
    "next_chapter": {
      "type": "string"
    },
    "club_specializations": {
      "type": "object",
      "additionalProperties": {
        "type": "array",
        "items": {
          "type": "object",
          "required": ["id", "name", "description"],
          "properties": {
            "id": {
              "type": "string",
              "minLength": 1
            },
            "name": {
              "type": "string",
              "minLength": 1
            },
            "description": {
              "type": "string",
              "minLength": 1
            }
          }
        }
      }
    }
  },
  "allOf": [
    {
      "if": {
        "properties": { "type": { "enum": ["story"] } }
      },
      "then": {
        "required": ["dialogues", "completion_exp", "completion_tusd"]
      }
    },
    {
      "if": {
        "properties": { "type": { "enum": ["branching"] } }
      },
      "then": {
        "required": ["dialogues", "choices", "branches", "completion_exp", "completion_tusd"]
      }
    },
    {
      "if": {
        "properties": { "type": { "enum": ["challenge"] } }
      },
      "then": {
        "required": ["dialogues", "challenge_type", "difficulty", "challenge_description", "success_dialogues", "failure_dialogues", "rewards"]
      }
    }
  ]
}