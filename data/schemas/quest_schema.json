{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Quest Schema",
  "description": "Schema for validating quest data in the story mode",
  "type": "object",
  "additionalProperties": {
    "type": "object",
    "required": ["title", "description", "quest_giver", "quest_type"],
    "properties": {
      "title": {
        "type": "string",
        "minLength": 1
      },
      "description": {
        "type": "string",
        "minLength": 1
      },
      "quest_giver": {
        "type": "string",
        "minLength": 1
      },
      "quest_type": {
        "type": "string",
        "enum": ["main", "side", "daily", "challenge", "event"]
      },
      "difficulty": {
        "type": "string",
        "enum": ["fácil", "médio", "difícil", "muito difícil"]
      },
      "min_level": {
        "type": "integer",
        "minimum": 1
      },
      "prerequisites": {
        "type": "object",
        "properties": {
          "chapters_completed": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "quests_completed": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "attributes": {
            "type": "object",
            "properties": {
              "power_stat": {
                "type": "integer",
                "minimum": 1
              },
              "intellect": {
                "type": "integer",
                "minimum": 1
              },
              "charisma": {
                "type": "integer",
                "minimum": 1
              },
              "dexterity": {
                "type": "integer",
                "minimum": 1
              }
            }
          }
        }
      },
      "stages": {
        "type": "array",
        "minItems": 1,
        "items": {
          "type": "object",
          "required": ["id", "title", "description", "objectives"],
          "properties": {
            "id": {
              "type": "string",
              "minLength": 1
            },
            "title": {
              "type": "string",
              "minLength": 1
            },
            "description": {
              "type": "string",
              "minLength": 1
            },
            "objectives": {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "object",
                "required": ["type", "description"],
                "properties": {
                  "type": {
                    "type": "string",
                    "enum": ["talk_to", "collect", "deliver", "defeat", "explore", "return"]
                  },
                  "target": {
                    "type": "string",
                    "minLength": 1
                  },
                  "quantity": {
                    "type": "integer",
                    "minimum": 1
                  },
                  "item": {
                    "type": "string",
                    "minLength": 1
                  },
                  "description": {
                    "type": "string",
                    "minLength": 1
                  },
                  "time_limit": {
                    "type": "string",
                    "minLength": 1
                  }
                }
              }
            },
            "completion_dialogue": {
              "type": "object",
              "required": ["npc", "text"],
              "properties": {
                "npc": {
                  "type": "string",
                  "minLength": 1
                },
                "text": {
                  "type": "string",
                  "minLength": 1
                }
              }
            },
            "rewards": {
              "type": "object",
              "properties": {
                "exp": {
                  "type": "integer",
                  "minimum": 0
                },
                "tusd": {
                  "type": "integer",
                  "minimum": 0
                },
                "items": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "minLength": 1
                  }
                },
                "attribute_bonuses": {
                  "type": "object",
                  "properties": {
                    "power_stat": {
                      "type": "integer"
                    },
                    "intellect": {
                      "type": "integer"
                    },
                    "charisma": {
                      "type": "integer"
                    },
                    "dexterity": {
                      "type": "integer"
                    }
                  }
                },
                "affinity_changes": {
                  "type": "object",
                  "additionalProperties": {
                    "type": "integer"
                  }
                }
              }
            }
          }
        }
      },
      "objectives": {
        "type": "array",
        "minItems": 1,
        "items": {
          "type": "object",
          "required": ["type", "description"],
          "properties": {
            "type": {
              "type": "string",
              "enum": ["talk_to", "collect", "deliver", "defeat", "explore", "return"]
            },
            "target": {
              "type": "string",
              "minLength": 1
            },
            "quantity": {
              "type": "integer",
              "minimum": 1
            },
            "item": {
              "type": "string",
              "minLength": 1
            },
            "description": {
              "type": "string",
              "minLength": 1
            },
            "time_limit": {
              "type": "string",
              "minLength": 1
            }
          }
        }
      },
      "completion_dialogue": {
        "type": "object",
        "required": ["npc", "text"],
        "properties": {
          "npc": {
            "type": "string",
            "minLength": 1
          },
          "text": {
            "type": "string",
            "minLength": 1
          }
        }
      },
      "rewards": {
        "type": "object",
        "properties": {
          "exp": {
            "type": "integer",
            "minimum": 0
          },
          "tusd": {
            "type": "integer",
            "minimum": 0
          },
          "items": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "random_items": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["item_id", "chance"],
              "properties": {
                "item_id": {
                  "type": "string",
                  "minLength": 1
                },
                "chance": {
                  "type": "number",
                  "minimum": 0,
                  "maximum": 1
                }
              }
            }
          },
          "attribute_bonuses": {
            "type": "object",
            "properties": {
              "power_stat": {
                "type": "integer"
              },
              "intellect": {
                "type": "integer"
              },
              "charisma": {
                "type": "integer"
              },
              "dexterity": {
                "type": "integer"
              }
            }
          },
          "affinity_changes": {
            "type": "object",
            "additionalProperties": {
              "type": "integer"
            }
          },
          "title": {
            "type": "string",
            "minLength": 1
          }
        }
      },
      "failure_conditions": {
        "type": "object",
        "properties": {
          "time_limit": {
            "type": "string",
            "minLength": 1
          },
          "special_conditions": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 1
            }
          }
        }
      },
      "failure_consequences": {
        "type": "object",
        "properties": {
          "exp_penalty": {
            "type": "integer",
            "minimum": 0
          },
          "tusd_penalty": {
            "type": "integer",
            "minimum": 0
          },
          "affinity_changes": {
            "type": "object",
            "additionalProperties": {
              "type": "integer"
            }
          },
          "cooldown": {
            "type": "string",
            "minLength": 1
          },
          "failure_dialogue": {
            "type": "object",
            "required": ["npc", "text"],
            "properties": {
              "npc": {
                "type": "string",
                "minLength": 1
              },
              "text": {
                "type": "string",
                "minLength": 1
              }
            }
          }
        }
      },
      "time_limit": {
        "type": "string",
        "minLength": 1
      },
      "repeatable": {
        "type": "boolean"
      },
      "cooldown": {
        "type": "string",
        "minLength": 1
      }
    },
    "allOf": [
      {
        "if": {
          "properties": { "quest_type": { "enum": ["main"] } }
        },
        "then": {
          "required": ["stages", "difficulty", "min_level"]
        }
      },
      {
        "if": {
          "properties": { "quest_type": { "enum": ["side", "daily", "challenge"] } }
        },
        "then": {
          "required": ["objectives", "completion_dialogue", "rewards"]
        }
      },
      {
        "if": {
          "properties": { "repeatable": { "enum": [true] } }
        },
        "then": {
          "required": ["cooldown"]
        }
      }
    ]
  }
}